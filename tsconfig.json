{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",

    "strict": true,
    "skipLibCheck": true,

    "jsx": "react-jsx",
    "jsxImportSource": "react",

    "declaration": true,
    "emitDeclarationOnly": false,

    "outDir": "dist",
    "rootDir": "src",

    "types": ["react", "node"],
    "lib": ["ES2020", "DOM"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
